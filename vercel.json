{
	"version": 2,
	"buildCommand": "npm --prefix client ci && npm --prefix client run build",
	"outputDirectory": "client/build",
	"functions": {
		"api/**/*.js": {
			"runtime": "nodejs20.x"
		}
	},
	"rewrites": [
		{ "source": "/api/(.*)", "destination": "/api" },
		{ "source": "/(.*)", "destination": "/index.html" }
	]
}
